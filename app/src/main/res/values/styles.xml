<resources>

    <!-- Base application theme. -->

   <!-- <style name="AppTheme" parent="Theme.AppCompat.Light">-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:queryHint">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>


    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar.NoStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="android:animateOnClick">true</item>
    </style>
    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyButton" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:soundEffectsEnabled">true</item>
        <item name="android:animateOnClick">true</item>
    </style>
    <style name="ThemeOverlay.MySearchView" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:foreground">@android:color/black</item>
        <item name="android:colorAccent">@android:color/black</item>
        <item name="android:queryHint">@android:color/black</item>

    </style>

    <style name="ThemeOverlay.MyTextDetail" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
        <item name="android:padding">4dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:colorEdgeEffect"> @color/card_add_color</item>
    </style>

    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/nice_red</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>


    <style name="MyActionBar.MenuTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/nice_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="hintStyle" parent="TextAppearance.Design.Hint">



    <item name="android:textSize" >@dimen/size_hint_m</item>
    <item name="android:layout_marginBottom">@dimen/margin_bottom_hint</item>
</style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
<!--
    style="@style/Widget.MaterialComponents.Button.Icon"
-->
    <dimen name="size_hint_m">16sp</dimen>

    <style name="Error" parent="TextAppearance.AppCompat">
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>
