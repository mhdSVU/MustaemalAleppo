<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@color/colorPrimary"
    tools:context=".Domain.Add_NewItem_Activity"
    android:id="@+id/rootView"
    android:orientation="vertical"

    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/title_item_details"
        android:gravity="left"
        />

    <TextView
        android:id="@+id/textView_label_single_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="10dp"
        android:text="@string/label_item_single_desc_for_sale"
        android:textColor="@android:color/white"
        android:textStyle="bold" >

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_phone_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:elevation="5dp"
        android:padding="10dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/card_add_color"
        app:cardCornerRadius="15dp">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    >


                    <ImageButton
                        android:id="@+id/img_btn_itemImage"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginEnd="-11dp"
                        android:layout_marginStart="-11dp"
                        android:layout_marginTop="-11dp"
                        android:contentDescription="@string/desc_itemImage"
                        android:padding="10dp"
                        android:scaleType="centerCrop"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/et_item_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@null"
                            android:enabled="false"
                            android:inputType="text"
                            android:text="itemTitle"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"


                            />

                        <EditText
                            android:id="@+id/et_item_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="100dp"
                            android:layout_weight="0.4"
                            android:background="@null"
                            android:enabled="false"
                            android:gravity="right"
                            android:inputType="numberDecimal"
                            android:text="Item Price"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/currency_lable"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:layout_weight="0.1"
                            android:text="@string/symbol_dollar"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="240dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="2.0"


                        >

                        <TextView
                            android:id="@+id/tv_item_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="start"
                            android:text="item_city"
                            android:textColor="@android:color/white"
                            android:textSize="17sp"

                            />

                        <TextView
                            android:id="@+id/tv_item_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="end"
                            android:text="item_date"
                            android:textColor="@android:color/white"
                            android:textSize="17sp"
                            android:textStyle="bold"


                            />


                        <TextView
                            android:id="@+id/tv_item_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1.0"
                            android:text="item_category"
                            android:textColor="@color/item_price"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:visibility="gone" />


                    </LinearLayout>


                </FrameLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    android:rowCount="8"

                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_details_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/title_extra_info"
                            android:textColor="@android:color/black"
                            android:textSize="17sp"

                            />

                        <EditText
                            android:id="@+id/et_item_details"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            android:enabled="false"
                            android:inputType="text"
                            android:isScrollContainer="true"
                            android:maxLines="3"
                            android:scrollbars="vertical"
                            android:text="@string/default_val_extra_info"
                            android:textColor="@color/colorPrimary"
                            android:textSize="17sp"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_marginEnd="5dp"
                        android:layout_row="5"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginBottom="10dp"

                        >

                        <ImageView
                            android:id="@+id/imageView_userImage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="15dp"
                            android:layout_weight="1"
                            android:scaleType="centerInside"
                            app:srcCompat="@mipmap/avatar_default" />

                        <TextView
                            android:id="@+id/textView_username"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_marginStart="10dp"
                            android:layout_weight="6.0"
                            android:gravity="left"
                            android:text="@string/default_val_user_name"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/imageButton_user_phoneCall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_marginStart="3dp"
                            android:layout_weight="1.5"
                            android:background="@color/fui_transparent"
                            android:scaleType="center"
                            android:src="@mipmap/ic_call_black_24dp" />

                        <ImageButton
                            android:id="@+id/imageButton_user_send_email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1.5"
                            android:background="@color/fui_transparent"
                            android:scaleType="center"
                            android:src="@mipmap/ic_email_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_item_modify"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_column="0"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_row="5"
                        android:background="@android:color/darker_gray"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2.0">

                        <Button
                            android:id="@+id/button_dismiss_modifications"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1.0"
                            android:text="@string/ignore"
                            android:theme="@style/ThemeOverlay.MyDarkButton" />

                        <Button
                            android:id="@+id/button_confirm_modifications"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1.0"
                            android:text="@string/save"
                            android:theme="@style/ThemeOverlay.MyDarkButton"

                            />


                    </LinearLayout>
                </GridLayout>

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


    </android.support.v7.widget.CardView>


</LinearLayout>
