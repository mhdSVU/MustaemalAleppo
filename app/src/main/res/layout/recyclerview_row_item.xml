<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_item_data"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:elevation="8dp"

    card_view:cardBackgroundColor="@color/grey_300"
    card_view:cardCornerRadius="20dp"
    android:focusable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|start|center_vertical"
        android:clickable="false"
        android:focusable="false"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/img_btn_itemImage"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/grey_300"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitCenter" />

        <CheckBox
            android:id="@+id/cb_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:button="@drawable/sl_favorite"
            android:clickable="false"
            android:focusable="false" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:clickable="false"
            android:focusable="false"
            android:visibility="invisible" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:clickable="false"
            android:focusable="false"

            app:boxBackgroundMode="none"
            app:suffixText="@string/symbol_syrian_pound_2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:ellipsize="end"
                android:enabled="false"
                android:gravity="start"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="@color/item_price"
                android:textSize="18sp"
                android:textStyle="bold" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:clickable="false"
            android:focusable="false"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_item_title"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:enabled="false"
                android:maxLength="50"
                android:maxLines="1"
                android:textColor="@color/item_title"
                android:textDirection="locale"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Car godfsafasfaod bad " />

        </com.google.android.material.textfield.TextInputLayout>


    </FrameLayout>


</androidx.cardview.widget.CardView>




