<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_phone_auth"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="5dp"
    android:elevation="8dp"
    android:padding="8dp"
    card_view:cardBackgroundColor="@color/grey_300"
    card_view:cardCornerRadius="20dp"

    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|start|center_vertical"


        >



        <ImageButton
            android:id="@+id/img_btn_itemImage"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/grey_300"
            android:scaleType="fitCenter"/>


        <CheckBox
            android:id="@+id/cb_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:button="@drawable/sl_favorite" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:enabled="false"
                android:gravity="left"
                android:textColor="@color/item_price"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="42342"


                />

            <TextView
                android:id="@+id/currency_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="left"
                android:text="@string/symbol_syrian_pound"
                android:textColor="@color/item_price"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>
        <EditText
            android:id="@+id/et_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_margin="8dp"
            android:background="@null"
            android:enabled="false"
            android:textColor="@color/item_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            tools:text="Car godfsafasfaod bad "

            />
    </FrameLayout>


</androidx.cardview.widget.CardView>




