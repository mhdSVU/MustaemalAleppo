<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/textView_thanks_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="50dp"
            android:padding="5dp"
            android:text="@string/splash_thanks_1"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView_thanks_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="50dp"
            android:padding="5dp"
            android:text="@string/splash_thanks_2"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView_motivation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="50dp"
            android:padding="5dp"
            android:text="@string/splash_motive2"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/tv_label_my_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/font__logo"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/my_app_name"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/size_logo"
            android:textStyle="bold"
            app:drawableTopCompat="@drawable/logo_green" />

        <TextView
            android:id="@+id/textView_motivation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/splash_motive1"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

</ScrollView>


