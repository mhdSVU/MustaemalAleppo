<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:gravity="center_horizontal|center_vertical"
    tools:context="mohammedyouser.com.mustaemalaleppo.UI.SplashActivity">


  <TextView
      android:id="@+id/textView_motivation2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:layout_marginBottom="50dp"
      android:text="@string/splash_motive2"
      android:textColor="@android:color/background_light"
      android:textSize="30sp"
      android:textStyle="bold|italic"
       />


  <ImageView
      android:id="@+id/imageView_logo"
      android:layout_width="245dp"
      android:layout_height="wrap_content"
      android:contentDescription="@string/desc_myapp_logo"
      android:src="@drawable/msalp_logo" />

  <TextView
      android:id="@+id/textView_label_my_app"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:layout_marginTop="-25dp"
      android:layout_marginBottom="100dp"

      android:text="@string/app_name"
      android:textColor="@android:color/background_light"
      android:textSize="25sp"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/textView_motivation1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:text="@string/splash_motive1"
      android:textColor="@android:color/background_light"
      android:textSize="30sp"
      android:textStyle="bold|italic" />

</LinearLayout>
