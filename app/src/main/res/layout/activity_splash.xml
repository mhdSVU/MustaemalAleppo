<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context="mohammedyouser.com.mustaemalaleppo.UI.Activity_Splash">


    <TextView
        android:id="@+id/textView_motivation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:text="@string/splash_motive2"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold|italic" />



    <TextView
        android:id="@+id/tv_label_my_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/my_app_name"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:fontFamily="@font/font__logo"
        android:textStyle="bold"
        app:drawableTopCompat="@drawable/logo_green" />

    <TextView
        android:id="@+id/textView_motivation1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/splash_motive1"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

</LinearLayout>
