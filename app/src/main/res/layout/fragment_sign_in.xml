<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="3dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:orientation="horizontal"
        android:rowCount="6"
            >
        <TextView
            android:id="@+id/sign_in_methods_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:text="@string/label_sign_in_methods"
            android:layout_marginTop="5dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center_horizontal"
            />


        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:visibility="visible"
            android:id="@+id/cardView_email_auth"
            android:elevation="7dp"
            android:padding="7dp"
            card_view:cardBackgroundColor="@color/card_add_color"
            card_view:cardCornerRadius="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_column="0"
            android:layout_row="1"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="7dp">

    <!--TODO fui_linkColor-->
                <TextView
                    android:id="@+id/sign_in_method_email_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/label_sign_in_method_email"
                    android:textColor="@color/fui_linkColor"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/sign_in_button_EmlPass"
                    android:layout_width="250dp"
                    android:layout_height="50dp"

                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@color/fui_linkColor"
                    android:drawableLeft="@android:drawable/ic_dialog_email"

                    android:padding="9dp"
                    android:text="@string/sign_in"

                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:visibility="visible"
            android:id="@+id/cardView_phone_auth"
            android:elevation="7dp"
            android:padding="7dp"
            card_view:cardBackgroundColor="@color/card_add_color"
            card_view:cardCornerRadius="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"

            android:layout_column="0"
            android:layout_row="2"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="7dp"
                >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/label_sign_in_method_phone"
                    android:textColor="@color/nice_red"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"

                    android:textStyle="bold" />


                <Button
                    android:id="@+id/sign_in_button_Phone"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="@color/nice_red"
                    android:drawableLeft="@android:drawable/ic_menu_call"
                    android:padding="9dp"


                    android:text="@string/sign_in" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:visibility="visible"
            android:id="@+id/cardView3"
            android:elevation="7dp"
            android:padding="7dp"
            card_view:cardBackgroundColor="@color/card_add_color"
            card_view:cardCornerRadius="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_column="0"
            android:layout_row="3"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="7dp">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="14dp"
                    android:text="@string/label_sign_in_method_google"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:textStyle="bold" />


                <com.google.android.gms.common.SignInButton
                    android:id="@+id/button_sign_in_Google"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </GridLayout>
</ScrollView>