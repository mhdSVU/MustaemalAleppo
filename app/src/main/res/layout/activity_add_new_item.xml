<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".Domain.Add_NewItem_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimary"
        android:gravity="start"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/title_add_item" />


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/cardView"
        android:elevation="5dp"
        android:padding="7dp"
        card_view:cardBackgroundColor="@color/card_add_color"
        card_view:cardCornerRadius="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
      >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
           >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="3dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
               >

                <TextView
                    android:id="@+id/textView_adding_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="3dp"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginStart="7dp"
                    android:layout_gravity="center_horizontal"

                    />

                <!--TODO fui_bgEmail-->
                <TextView
                    android:id="@+id/textView_fields_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="5dp"
                    android:text="@string/message_error_required_fields"
                    android:textAllCaps="false"
                    android:textColor="@color/fui_bgEmail"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    />


            </LinearLayout>
            <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_column="0"
    android:layout_row="1"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        android:weightSum="4.0"
    >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3.0"
            android:hint="@string/hint_item_title"
            card_view:counterEnabled="true"
            card_view:counterMaxLength="21"
            card_view:counterOverflowTextAppearance="@style/TextAppearance.Design.Counter.Overflow">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input"
                android:hint="@string/hint_item_title"
                android:inputType="text"
                android:maxLength="21"
                android:maxLines="1"
                android:textColor="@color/add_key_color"
                android:textSize="20sp"
                android:paddingStart="10dp"

                />
        </com.google.android.material.textfield.TextInputLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    >

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:hint="@string/hint_item_price"
        card_view:counterEnabled="true"
        card_view:counterMaxLength="9"
        card_view:counterOverflowTextAppearance="@style/TextAppearance.Design.Counter.Overflow">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hint_item_price"
            android:inputType="numberDecimal"
            android:maxLength="9"
            android:maxLines="1"
            android:textColor="@color/add_key_color"
            android:textSize="20sp"
            android:background="@drawable/background_input"
            android:paddingStart="10dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/currency_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/symbol_dollar"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="0.5"
        />


</LinearLayout>


</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >

            <Spinner
                android:id="@+id/spinner_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawSelectorOnTop="false"
                android:layout_weight="0.5"
                android:text="@string/label_category_choose" />


        <Spinner
            android:id="@+id/spinner_cities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:drawSelectorOnTop="false"

            android:text="@string/label_city_choose" />


    </LinearLayout>

</LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_margin="5dp"
                >



                <ImageButton
                    android:id="@+id/img_btn_itemImage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/background_search_view_1"
                    android:contentDescription="@string/desc_itemImage"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/click_to_add_btn" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="100dp"
                    card_view:srcCompat="@drawable/icons_plus_24" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_details_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:layout_row="4"
                android:text="@string/label_extra_info"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:hint="@string/hint_desc"
                card_view:counterEnabled="true"
                card_view:counterMaxLength="200"
                card_view:counterOverflowTextAppearance="@style/TextAppearance.Design.Counter.Overflow"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/item_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="@string/hint_desc"
                    android:inputType="textMultiLine"
                    android:maxLength="200"
                    android:maxLines="3"
                    android:isScrollContainer="true"
                    android:scrollbars="horizontal|vertical" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/save"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_row="6"
                android:background="@drawable/icons_save_24"
                android:padding="5dp"
                android:textSize="12sp"
                android:layout_marginStart="100dp"
                />

            <Button
                android:id="@+id/cancel"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:layout_marginStart="190dp"
                android:background="@drawable/icons_cancel_filled_24"
                android:padding="5dp"
                android:textSize="12sp"

                />
            <TextView
                android:id="@+id/save_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                android:text="@string/save"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:layout_marginStart="105dp"

                />
            <TextView
                android:id="@+id/cancel_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                android:layout_marginStart="200dp"
                android:text="@string/cancel"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />


        </GridLayout>

    </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>




</LinearLayout>
